/* Figma-style D3.js Compass - Realistic Design */

#d3-compass-container {
  position: relative;
  width: 100%;
  height: 100%;
  min-height: 500px;
  overflow: visible; /* Thay đổi từ hidden thành visible */
  background: transparent;
  /* Remove background pattern that might interfere */
  background-image: none;
}

#d3-compass-container svg {
  filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.15));
  transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
  user-select: none;
  pointer-events: auto;
  /* Ensure SVG is fully visible */
  overflow: visible;
  z-index: 10;
}

#d3-compass-container svg:hover {
  filter: drop-shadow(0 25px 50px rgba(0, 0, 0, 0.2));
  transform: translateY(-2px);
}

/* Enhanced sector hover effects */
.sector path {
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  cursor: pointer;
}

.sector:hover path {
  filter: brightness(1.15) saturate(1.3) drop-shadow(0 4px 8px rgba(0,0,0,0.2));
  stroke-width: 3px;
  transform: scale(1.02);
  transform-origin: center;
}

.sector text {
  pointer-events: none;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  font-feature-settings: 'liga' 1, 'kern' 1;
}

/* Realistic needle animations */
.needle {
  filter: drop-shadow(0 4px 8px rgba(220, 38, 38, 0.3));
  transition: transform 0.8s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.needle:hover {
  filter: drop-shadow(0 6px 12px rgba(220, 38, 38, 0.4));
}

/* Typography improvements */
text {
  font-feature-settings: 'liga' 1, 'kern' 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Responsive adjustments with better scaling */
@media (max-width: 768px) {
  #d3-compass-container {
    min-height: 400px;
  }
  
  #d3-compass-container svg {
    max-width: 400px;
    max-height: 400px;
    filter: drop-shadow(0 15px 30px rgba(0, 0, 0, 0.12));
  }
}

@media (max-width: 480px) {
  #d3-compass-container {
    min-height: 350px;
  }
  
  #d3-compass-container svg {
    max-width: 350px;
    max-height: 350px;
    filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.1));
  }
}

/* Loading animation with modern feel */
.compass-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 500px;
}

.compass-loading::before {
  content: "⟳";
  font-size: 48px;
  color: #d4af37;
  animation: modernSpin 2s cubic-bezier(0.4, 0.0, 0.2, 1) infinite;
}

@keyframes modernSpin {
  from { 
    transform: rotate(0deg) scale(1);
    opacity: 0.8;
  }
  50% {
    transform: rotate(180deg) scale(1.1);
    opacity: 1;
  }
  to { 
    transform: rotate(360deg) scale(1);
    opacity: 0.8;
  }
}

/* Enhanced glow effects */
.glow-gold {
  filter: drop-shadow(0 0 15px rgba(212, 175, 55, 0.7)) 
          drop-shadow(0 0 30px rgba(212, 175, 55, 0.4));
}

.glow-red {
  filter: drop-shadow(0 0 15px rgba(220, 38, 38, 0.7))
          drop-shadow(0 0 30px rgba(220, 38, 38, 0.4));
}

/* Premium sector selection */
.sector-selected path {
  stroke: #fbbf24 !important;
  stroke-width: 4px !important;
  filter: brightness(1.25) saturate(1.4) drop-shadow(0 0 20px rgba(251, 191, 36, 0.6));
  animation: selectedPulse 2s ease-in-out infinite;
}

@keyframes selectedPulse {
  0%, 100% { 
    filter: brightness(1.25) saturate(1.4) drop-shadow(0 0 20px rgba(251, 191, 36, 0.6));
  }
  50% { 
    filter: brightness(1.35) saturate(1.5) drop-shadow(0 0 25px rgba(251, 191, 36, 0.8));
  }
}

/* Modern tooltip styles */
.d3-tooltip {
  position: absolute;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(10px);
  color: white;
  padding: 12px 16px;
  border-radius: 12px;
  font-size: 13px;
  font-family: 'Inter', system-ui, sans-serif;
  font-weight: 500;
  pointer-events: none;
  z-index: 1000;
  box-shadow: 
    0 10px 40px rgba(0, 0, 0, 0.3),
    0 0 0 1px rgba(255, 255, 255, 0.1);
  transform: translateY(-5px);
}

/* Professional button states */
.compass-active {
  background: linear-gradient(135deg, #059669, #047857) !important;
  box-shadow: 
    0 8px 25px rgba(5, 150, 105, 0.4),
    0 0 0 1px rgba(255, 255, 255, 0.1);
  transform: translateY(-1px);
}

.compass-inactive {
  background: linear-gradient(135deg, #6b7280, #4b5563) !important;
  box-shadow: 
    0 4px 15px rgba(107, 114, 128, 0.3),
    0 0 0 1px rgba(255, 255, 255, 0.05);
}

/* Smooth info panel transitions */
.compass-info-transition {
  transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.compass-info-highlight {
  background: linear-gradient(135deg, 
    rgba(255, 215, 0, 0.12), 
    rgba(255, 215, 0, 0.06));
  border-left: 4px solid #ffd700;
  padding-left: 16px;
  border-radius: 0 8px 8px 0;
  box-shadow: 0 2px 8px rgba(255, 215, 0, 0.1);
}

/* Glass morphism effect for modern UI */
.compass-glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 16px;
}

